package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

rust_library {
    name: "libzbi",
    crate_name: "zbi",
    edition: "2021",
    host_supported: true,
    features: ["zerocopy_0_6"],
    srcs: ["src/lib.rs"],
    rustlibs: ["libbitflags","libzerocopy"],
}

rust_library_rlib {
    name: "libzbi_nostd",
    crate_name: "zbi",
    edition: "2021",
    no_stdlibs: true,
    prefer_rlib: true,
    srcs: ["src/lib.rs"],
    features: ["zerocopy_0_6"],
    rustlibs: ["libbitflags","libzerocopy_nostd_noalloc"],
}

// libzbi unit tests.
rust_test_host {
   name: "libzbi_test",
   features: ["zerocopy_0_6"],
   srcs: [ "src/lib.rs" ],
   rustlibs: ["libbitflags","libzerocopy","libhex"],
}
